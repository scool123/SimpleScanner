<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.simplescanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.NoActionBar" >
        <activity
            android:name="com.example.simplescanner.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.simplescanner.CameraActivity_heibai"
            android:label="@string/title_activity_camera_activity_heibai" 
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.simplescanner.CameraActivity_caise"
            android:label="@string/title_activity_camera_activity_caise"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="com.example.simplescanner.ChakanActivity"
            android:label="@string/title_activity_chakan"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.example.simplescanner.ChaliActivity_heibai"
            android:label="@string/title_activity_chali_activity_heibai"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="com.example.simplescanner.ChuliActivity_caise"
            android:label="@string/title_activity_chuli_activity_caise"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="com.example.simplescanner.ChaliActivity_chakan"
            android:label="@string/title_activity_chali_activity_chakan"
            android:screenOrientation="portrait"  >
        </activity>
        <activity
            android:name="com.example.simplescanner.WelcomeActivity"
            android:label="@string/title_activity_welcome" 
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.simplescanner.AboutActivity"
            android:label="@string/title_activity_about"
            android:screenOrientation="portrait"  >
        </activity>
    </application>
    <!-- 授予程序使用摄像头的权限 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <!-- 在SD卡中创建与删除文件权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 向SD卡写入数据权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>