<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@drawable/chuli2"
    tools:context=".ChuliActivity_caise" >
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/actionbar" />
    <ImageView
        android:id="@+id/Chuliimageview_caise"
   		android:layout_width="220dp"
        android:layout_height="310dp"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:maxHeight="360dp"
        android:maxWidth="360dp"
        android:scaleType="fitCenter" />

     <Button
         android:id="@+id/shanchu_caise"
         android:layout_width="100dp"
         android:layout_height="30dp"
         android:layout_alignParentBottom="true"
         android:layout_alignRight="@+id/imageView2"
         android:layout_marginBottom="14dp"
         android:background="@drawable/del" />

     <Button
         android:id="@+id/wancheng_caise"
         android:layout_width="100dp"
         android:layout_height="30dp"
         android:layout_above="@+id/shanchu_caise"
         android:layout_marginBottom="24dp"
         android:layout_toRightOf="@+id/button_chuli_caise"
         android:background="@drawable/save" />

     <SeekBar
         android:id="@+id/duibiduseekbar_caise"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_above="@+id/wancheng_caise"
         android:layout_alignParentLeft="true"
         android:layout_marginBottom="16dp"
         android:max="127"
         android:progress="63" />

     <Button
         android:id="@+id/button_chuli_caise"
         android:layout_width="90px"
         android:layout_height="90px"
         android:layout_alignParentLeft="true"
         android:layout_alignParentTop="true"
         android:background="@drawable/back" />

</RelativeLayout>